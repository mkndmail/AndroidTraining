<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkslategray"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/custom_view_test"

                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:gravity="center"

                android:hint="Name" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_view_test"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20sp"
                android:hint="Age" />

            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_view_test"


                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:hint="Address" />

            <EditText
                android:id="@+id/editTextDepartment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_view_test"
                android:textColorHint="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_20"
                android:gravity="center"

                android:hint="Department" />

            <Button
                android:id="@+id/show_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:text="Show Text"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/custom_view_test"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_custom_name"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_30sp"
                android:textColor="@color/teal"
                />

            <TextView
                android:id="@+id/txt_custom_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_30sp"
                android:textStyle="bold"
                android:textColor="@color/teal" />

            <TextView
                android:id="@+id/txt_custom_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_30sp"
                android:textStyle="bold"
                android:textColor="@color/teal" />

            <TextView
                android:id="@+id/txt_custom_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/dimen_30sp"

                android:textColor="@color/teal" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>