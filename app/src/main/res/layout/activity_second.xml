<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/txt_fill_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please fill the details"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/edt_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_fill_details"
        android:layout_marginTop="8dp"
        android:hint="Please Enter Your name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_fill_details"
        android:layout_alignEnd="@+id/edt_person_name"
        android:layout_alignRight="@id/edt_person_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:text="Clear" />


    <EditText
        android:id="@+id/edt_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_person_name"
        android:layout_marginTop="8dp"
        android:hint="Enter Last name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edt_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_last_name"
        android:hint="Please Enter Your age"
        android:imeOptions="actionDone"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_age"
        android:text="Go Back" />

</RelativeLayout>